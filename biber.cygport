NAME="biber"
VERSION=2.5
RELEASE=1
CATEGORY="Text"
SUMMARY="BibTeX replacement for users of BibLaTeX"
DESCRIPTION="Biber is a BibTeX replacement for users of BibLaTeX.  Biber supports
full UTF-8, can (re-)encode input and output, supports highly
configurable sorting, dynamic bibliography sets, and many other
features."
HOMEPAGE="http://biblatex-biber.sourceforge.net/"

GIT_URI="git://github.com/plk/biber.git"
# remove the 'v' for 1.6
GIT_TAG=v${VERSION}
inherit git perl

DEPEND="
perl-Test-Simple
perl-Test-Differences
perl-File-Which
perl-Config-AutoConf
perl-ExtUtils-LibBuilder
perl-autovivification
perl-Class-Accessor
perl-Data-Compare
perl-Data-Dump
perl-Data-Uniqid
perl-Date-Simple
perl-File-Slurp
perl-IPC-Cmd
perl-IPC-Run3
perl-List-AllUtils
perl-List-MoreUtils
perl-Module-Build
perl-Mozilla-CA
perl-Regexp-Common
perl-Log-Log4perl
perl-Unicode-Collate
perl-Unicode-Normalize
perl-Unicode-LineBreak
perl-Encode-EUCJPASCII
perl-Encode-HanExtra
perl-Encode-JIS2K
perl-XML-LibXML-Simple
perl-XML-LibXSLT
perl-XML-Writer
perl-Text-Roman
perl-URI
perl-Text-BibTeX
perl-libwww-perl
perl-LWP-Protocol-https
perl-Business-ISBN
perl-Business-ISSN
perl-Business-ISMN
perl-Lingua-Translit
"

REQUIRES="texlive-collection-bibtexextra perl-autovivification"
ARCH=noarch
